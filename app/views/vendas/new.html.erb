<script type="text/javascript">
  $( document ).ready(function() {

    //Oculto seção de Dados do Cartão
    $(".dados_cartao").hide();

    //Calcula Valor inicial do Carrinho
    calcula_valor_carrinho();

    //Adiciono manipulador de evento ao botão de Adicionar ao Carrinho
    $("[id*='bt_add']" ).click(function(event) {
      event.preventDefault();
      adiciona_produto_carrinho(event);
      calcula_valor_carrinho();
    });

    //Adiciono manipulador de evento ao botão de Remover do Carrinho
    $("[id*='bt_remove_']" ).click(function(event) {
      event.preventDefault();
      remove_produto_carrinho(event);
      calcula_valor_carrinho();
    });

    //Adiciono manipulador de evento ao campo Desconto
    $("#desconto" ).on("change",function(event) {
      event.preventDefault();
      calcula_valor_carrinho();
    });


    //Adiciono manipulador de evento a opçao de pagamento Cartao
    $(".opcao_cartao").click(function(event) {
      $(".dados_cartao").show();
    });

    //Adiciono manipulador de evento a opçao de pagamento Dinheiro
    $(".opcao_dinheiro").click(function(event) {
      $(".dados_cartao").hide();
    });
  });

</script>
<%= render 'form' %>
