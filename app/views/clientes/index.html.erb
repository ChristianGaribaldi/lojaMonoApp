<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h3><strong>Listagem de Clientes</strong></h3>
      </div>
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <th>Nome</th>
          <th>CPF</th>
          <th>Email</th>
          <th>Endereço</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.nome %></td>
              <td><%= cliente.cpf %></td>
              <td><%= cliente.email %></td>
              <td>
                <%= cliente.rua %> <%= cliente.numero %>&nbsp;-&nbsp; <%= cliente.bairro %>
                (<%= cliente.cidade %>&nbsp;/&nbsp;<%= cliente.estado %>)
              </td>
              <td><%= link_to 'Ver', cliente %></td>
              <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
              <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

