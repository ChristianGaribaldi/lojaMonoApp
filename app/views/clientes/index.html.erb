<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h3><strong>Listagem de Clientes</strong></h3>
      </div>
      <% if @clientes.length > 0 %>
          <table class="table table-striped table-bordered">
            <thead>
            <tr>
              <th>Nome</th>
              <th>CPF</th>
              <th>Email</th>
              <th>Endereço</th>
              <th>CEP</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @clientes.each do |cliente| %>
                <tr>
                  <td><%= cliente.nome %></td>
                  <td><%= cliente.cpf %></td>
                  <td><%= cliente.email %></td>
                  <td>
                    <%= cliente.rua %> <%= cliente.numero %>&nbsp;-&nbsp; <%= cliente.bairro %>
                    (<%= cliente.cidade %>&nbsp;/&nbsp;<%= cliente.estado %>)
                  </td>
                  <td><%= cliente.cep %></td>
                  <td><%= link_to 'Ver', cliente, class:'btn btn-info', role:'button'  %></td>
                  <td><%= link_to 'Editar', edit_cliente_path(cliente), class:'btn btn-warning', role:'button' %></td>
                  <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Você tem certeza?' }, class:'btn btn-danger', role:'button' %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
          <div class="alert alert-info" role="alert">Ainda não há Clientes cadastrados!</div>
      <% end %>

      <br/>
      <%= link_to 'Voltar', lojas_path, class: 'btn btn-default btn-block', role:'button' %>
    </div>
  </div>
</div>
