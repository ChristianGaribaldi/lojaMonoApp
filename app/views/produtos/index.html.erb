<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h3><strong>Listagem de Produtos</strong></h3>
      </div>
      <% if @produtos.length > 0 %>
          <table class="table table-striped table-bordered">
            <thead>
            <tr>
              <th>Nome</th>
              <th>Descrição</th>
              <th>Preço Unitário</th>
              <th>Quantidade Estoque</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @produtos.each do |produto| %>
                <tr>
                  <td><%= produto.nome %></td>
                  <td><%= produto.descricao %></td>
                  <td><%= produto.precoUnitario %></td>
                  <td><%= produto.qtd_estoque%></td>
                  <td><%= link_to 'Ver', produto %></td>
                  <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
                  <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
          <div class="alert alert-info" role="alert">Ainda não há Produtos cadastrados!</div>
      <%end%>
    </div>
  </div>
</div>

<%= link_to 'Voltar', lojas_path %>
