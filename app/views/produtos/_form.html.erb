<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="page-header">
        <h3><strong>Cadastro de Produto</strong></h3>
      </div>

      <%= form_for(@produto) do |f| %>
          <% if @produto.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@produto.errors.count, "error") %> impedem o salvamento desse cadastro:</h2>

                <ul>
                  <% @produto.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :nome %><br>
            <%= f.text_field :nome, class: "form-control", placeholder: "Nome", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :descricao, 'Descrição' %><br>
            <%= f.text_field :descricao, class: "form-control", placeholder: "Descrição", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :precoUnitario, 'Preço Unitário' %><br>
            <%= f.number_field :precoUnitario, class: "form-control", placeholder: "10", min: 0, required: true %>
          </div>

          <div class="form-group">
            <%= f.label :qtd_estoque, 'Quantidade Estoque' %><br>
            <%= f.number_field :qtd_estoque, class: "form-control", placeholder: "10", min: 0, required: true %>
          </div>
          <%= f.submit "Salvar", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>












